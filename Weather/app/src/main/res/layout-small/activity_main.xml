<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tema"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="60sp"
        android:layout_marginTop="25sp"
        android:width="1dip"
        android:autofillHints=""
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="10sp" />


    <Button
        android:id="@+id/main_btn"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@+id/user_field"
        android:layout_marginHorizontal="90sp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/main_btn"
        android:textSize="7sp"
        android:textColor="@color/textColorButton"/>


    <Button
        android:id="@+id/clear_btn"
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_below="@+id/main_btn"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/clear"
        android:textSize="6sp"
        android:textColor="@color/textColor"/>


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear_btn"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result2"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/result4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result3"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="10sp" />

    <Button
        android:id="@+id/buttonLink"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/main_btn"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="220dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/button_link"
        android:textColor="@color/textColor"/>

</RelativeLayout>