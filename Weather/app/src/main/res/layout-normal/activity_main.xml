<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tema"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="60sp"
        android:width="1dip"
        android:autofillHints=""
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/hint_user_field"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="25sp" />


    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/user_field"
        android:layout_marginHorizontal="115sp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/main_btn"
        android:textSize="10dp"
        android:textColor="@color/textColorButton"/>

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/main_btn"
        android:layout_marginHorizontal="165sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/clear"
        android:textSize="8dp"
        android:textColor="@color/textColor"/>


    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear_btn"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="65sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result2"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result3"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonLink"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/main_btn"
        android:layout_marginHorizontal="70sp"
        android:layout_marginTop="340dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/button_link"
        android:textColor="@color/textColor"/>


</RelativeLayout>